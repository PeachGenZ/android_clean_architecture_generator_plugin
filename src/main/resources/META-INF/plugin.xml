<idea-plugin>
    <id>com.him.core.generator</id>
    <name>Android Clean Architecture Generator</name>
    <version>0.1.0</version>
    <vendor email="robohorsed@gmail.com" url="https://github.com/arohim/eddga">Edd Ga</vendor>

    <description><![CDATA[
        This is an internal plugin I make for using very specific Android Clean Architecture [https://github.com/bufferapp/android-clean-architecture-boilerplate]
        The road map of this project is generate the whole things from plain JSON all the way through to Domain Layer
        Currently, Generate Kotlin POJO files from JSON <br>
          - Domain POJO <br>
          - Data POJO <br>
          - Cache POJO <br>
          - Remote POJO <br>
          And Generate mapper with Unit testing is coming soon.

          This project is on top of https://github.com/robohorse/RoboPOJOGenerator <br>
          Thank you to Robohorse to make me easier to extend.
    ]]></description>

    <change-notes><![CDATA[
    Minor bug fix
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <project-components>
        <component>
            <implementation-class>
                com.robohorse.robopojogenerator.components.ProjectConfigurationComponent
            </implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <action id="RoguePOJOAction" class="com.robohorse.robopojogenerator.actions.RemotePOJOAction"
                icon="/icons/pojo.png"
                text="Remote POJO from JSON"
                description="Remote POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="DataLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.DataLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Data Layer POJO from JSON"
                description="Data Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="CacheLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.CacheLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Cache Layer POJO from JSON"
                description="Cache Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="DomainLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.DomainLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Domain Layer POJO from JSON"
                description="Domain Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>

    <actions>
        <group id="MyPlugin.TopMenu"
               text="Kaidee Plugin"
               description="Kaidee Plugin">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="com.robohorse.robopojogenerator.actions.CoreGeneratorAction"
                    icon="/icons/pojo.png"
                    class="com.robohorse.robopojogenerator.actions.CoreGeneratorAction"
                    text="Core POJO &amp; Mapper Generator"
                    description="CorePOJOAction">
                <add-to-group group-id="NewGroup" anchor="last"/>
            </action>
        </group>
    </actions>
</idea-plugin>