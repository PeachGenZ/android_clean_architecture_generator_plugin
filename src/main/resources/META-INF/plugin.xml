<idea-plugin>
    <id>com.robohorse.robopojogenerator</id>
    <name>RoboPOJOGenerator</name>
    <version>1.9.1</version>
    <vendor email="robohorsed@gmail.com" url="https://github.com/robohorse/RoboPOJOGenerator">ROBOHORSE</vendor>

    <description><![CDATA[
      Generate Java and Kotlin POJO files from JSON: GSON, FastJSON, AutoValue (GSON), Logan Square, Jackson, empty annotations template.<br>
      Supports: primitive types, multiple inner JSONArrays.

      key words: JsonToPojo, Json2Pojo, Kotlin, GSON, FastJSON, AutoValue, Jackson, LoganSquare, Moshi
    ]]></description>

    <change-notes><![CDATA[
    Minor bug fix
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <project-components>
        <component>
            <implementation-class>
                com.robohorse.robopojogenerator.components.ProjectConfigurationComponent
            </implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="GeneratePOJOAction" class="com.robohorse.robopojogenerator.actions.GeneratePOJOAction"
                icon="/icons/pojo.png"
                text="Generate POJO from JSON"
                description="GeneratePOJOAction">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="RoguePOJOAction" class="com.robohorse.robopojogenerator.actions.RoguePOJOAction"
                icon="/icons/pojo.png"
                text="Rogue POJO from JSON"
                description="Rogue POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="DataLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.DataLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Data Layer POJO from JSON"
                description="Data Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="CacheLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.CacheLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Cache Layer POJO from JSON"
                description="Cache Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>

        <action id="DomainLayerPOJOAction" class="com.robohorse.robopojogenerator.actions.DomainLayerPOJOAction"
                icon="/icons/pojo.png"
                text="Domain Layer POJO from JSON"
                description="Domain Layer POJO from JSON">
            <add-to-group group-id="NewGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>